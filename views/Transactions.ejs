<%- include('layout/Header') %>
<div class="container">
  <div class="row">
    <% if (message) { %>
    <div
      class="alert alert-dismissible fade show alert-<%= message.type %>"
      role="alert"
    >
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="Closer"
      ></button>
      <strong><%=message.message %> </strong>
    </div>
    <% } %>
    <div class="col-lg-4 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-danger">
          <h3 class="text-light">Send Money</h3>
        </div>
        <div class="card-body p-5">
          <form action="/send" method="post">
            <div class="mb-4">
              <label for="to">FROM</label>
              <select
                name="sender"
                class="form-select"
                aria-label="Default select example"
              >
                <% holders.forEach((row) => { %>
                <option value="<%=row._id %>"><%= row.name%></option>
                <% }) %>
              </select>
            </div>

            <div class="mb-4">
              <label for="receiver">TO </label>
              <select
                name="receiver"
                class="form-select"
                aria-label="Default select example"
              >
                <% holders.forEach((row) => { %>
                <option value="<%=row._id %>"><%= row.name%></option>
                <% }) %>
              </select>
            </div>

            <div class="mb-4">
              <label for="name">Amount(in â‚¹)</label>
              <input
                min="0"
                type="number"
                name="amount"
                class="form-control form-control-lg"
                placeholder="Enter the amount"
                required
              />
            </div>
            <div class="mb-2 d-grid">
              <input
                type="submit"
                name="Submit"
                value="Send Money"
                class="btn btn-danger btn-lg"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include('layout/Footer') %>
</div>
